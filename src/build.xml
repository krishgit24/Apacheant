<project name="SimpleJavaApp" default="run">
    <property name="src" location="."/> <!-- Update src path to current directory -->
    <property name="build" location="../build"/> <!-- Move build folder one level up -->

    <target name="init">
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${build}"/>
    </target>

    <target name="run" depends="compile">
        <java classname="Main" classpath="${build}"/>
    </target>
</project>
